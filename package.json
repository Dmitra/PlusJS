{
  "name": "Vis",
  "version": "0.0.2",
  "description": "reusable library for radial visualizations",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/Dmitra/vis.git"
  },
  "keywords": [
    "d3",
    "chart"
  ],
  "author": "Dmitra",
  "license": "MIT",
  "readmeFilename": "README.md",
  "scripts" : {
    "build-debug": "browserify src/index.js -d -s Vis > vis.js",
    "build-min": "browserify src/index.js -s Vis | uglifyjs -c > vis.min.js",
    "build": "npm run build-debug && npm run build-min",
    "watch": "watchify src/index.js -d -s Vis -o vis.js -v"
  },
  "dependencies": {
    "d3": "<=3.5.0",
    "underscore": "<=1.7.0",
    "d3-transform": "<=1.0.3"
  },
  "devDependencies": {
    "browserify": "<=8.1.3",
    "uglify-js": "latest",
    "watchify" : "latest"
  }
}
